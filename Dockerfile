# Use official Python base imageFROM python:3.12-slim# Set environment variablesENV PYTHONDONTWRITEBYTECODE 1ENV PYTHONUNBUFFERED 1# Set working directoryWORKDIR /app# Install dependenciesCOPY requirements.txt .RUN pip install --upgrade pipRUN pip install django==3.2 && pip install -r requirements.txt# Copy project filesCOPY . .# Run Django migrationsRUN python manage.py migrate# Expose the port Django runs onEXPOSE 8000# Start Django development serverCMD ["python", "manage.py", "runserver", "0.0.0.0:8000"]